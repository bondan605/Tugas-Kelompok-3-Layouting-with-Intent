<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/circle_design_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/img_circle_design"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/get_started_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_get_started"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/get_started_title"
        android:layout_marginTop="150dp"
        />

    <TextView
        android:id="@+id/get_started_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/get_started_title"
        app:layout_constraintTop_toBottomOf="@id/get_started_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/get_started_desc"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/get_started_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/get_started_desc"
        app:layout_constraintTop_toBottomOf="@id/get_started_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/get_started_button"
        android:textSize="13sp"
        android:textColor="@color/grey"
        android:textAlignment="center"
        android:paddingHorizontal="50dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/get_started_button"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/get_started_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/get_started_btn"
        style="@style/ButtonPrimary"
        />

</androidx.constraintlayout.widget.ConstraintLayout>