<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">20dp</item>
    </style>
    <style name="TextTodo" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
     </style>
    <style name="WelcomeText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="ButtonPrimary" parent="TextAppearance.AppCompat.Button">
        <item name="android:backgroundTint">#5A877D</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="RoundedEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#5A877D</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>